package minefield;

import mvc.*;

public class MineFieldFactory implements AppFactory
{
	  public Model makeModel()
	  {
		  return new MineField();
	  }
    
    public View makeView(Model m)
    {
    	return new MineFieldView((MineField)m);
    }

    public String[] getEditCommands()
    {
    	return new String[] {"NW", "N", "NE", "W", "E","SW","S", "SE" };
    }

    public Command makeEditCommand(Model model, String type)
    {
    	if (type == "NW") {
		return new MoveCommand(model);
	}
	if (type == "N") {
		return new MoveCommand(model);
	}
	if (type == "NE") {
		return new MoveCommand(model);
	}
	if (type == "W") {
		return new MoveCommand(model);
	}
	if (type == "E") {
		return new MoveCommand(model);
	}
	if (type == "SW") {
		return new MoveCommand(model);
	}
	if (type == "S") {
		return new MoveCommand(model);
	}
	if (type == "SE") {
		return new MoveCommand(model);
	}
    	return null;
    }

    public String getTitle()
    {
    	return "Mine Field Team 9, 2021";
    }

    public String[] getHelp()
    {
    	return new String[] {"Navigate to the exit (bottom right) while avoiding mines."}
    }

    public String about()
    {
    	return "Mine Field Version 2.0. Copyright by Team 9 (Veronica Hu, Matthew Maksim).";
    }
}
